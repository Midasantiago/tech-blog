<div class="flex mb-4 post">
    <div class="md:w-1/2">
        <h2 class="text-2xl text-blue-500">
            {{post_title}}
        </h2>
        <p class="text-gray-600">Posted by: {{user.username}} on {{format_date date_created}}</p>
        <p class="mt-2">{{post_body}}</p>

        <form class="mt-4 comment-form">
            <div class="form-group">
                <label for="comment-text" class="block">Add a Comment:</label>
                <textarea class="form-input h-16" id="comment-text" name="comment-text"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Post Comment</button>
            </div>
        </form>
    </div>
</div>