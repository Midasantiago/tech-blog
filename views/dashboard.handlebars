<div class="flex justify-between md:space-x-4">
    <div class="bg-white p-4 rounded shadow-md w-full md:w-1/2">
        <h2 class="text-2xl font-bold mb-4">Welcome, {{username}}</h2>
    </div>
</div>

<div class="flex mt-4">
    <div class="md:w-1/2">
        <h3 class="text-2xl font-bold">Create a New Post</h3>

        <form class="space-y-4 new-post-form">
            <div class="form-group">
                <label for="post-name" class="block">Post Title:</label>
                <input class="form-input" type="text" id="post-title" name="post-name" />
            </div>
            <div class="form-group">
                <label for="post-text" class="block">Post Text:</label>
                <textarea class="form-input h-32" id="post-body" name="post-text"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Create Post</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
        <div class="post-list ml-4">
            <h3 class="text-2xl font-bold">Your Posts:</h3>

            {{#each posts as |post|}}
            <div class="mt-4">
                <div>
                    <h4 class="text-xl"><a href="/post/{{post.id}}" class="text-blue-500 hover:underline">{{post.post_title}}</a></h4>
                    <p>{{post.post_body}}</p>
                </div>
                <div>
                    <button data-id="{{post.id}}" class="btn btn-danger">DELETE</button>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
</div>

<script src="./js/dashboard.js"></script>