<div class="flex justify-between md:space-x-4">
    <div class="bg-white p-4 rounded shadow-md w-full md:w-1/2">
        <h2 class="text-2xl font-bold mb-4">Login</h2>
        <form class="space-y-4">
            <div class="form-group">
                <label for="email-login" class="block">Email:</label>
                <input class="form-input" type="text" id="email-login" />
            </div>
            <div class="form-group">
                <label for="password-login" class="block">Password:</label>
                <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>
    </div>
    <div class="bg-white p-4 rounded shadow-md w-full md:w-1/2">
        <h2 class="text-2xl font-bold mb-4">Signup</h2>
        <form class="space-y-4">
            <div class="form-group">
                <label for="username-signup" class="block">Username:</label>
                <input class="form-input" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="email-signup" class="block">Email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup" class="block">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Signup</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>
