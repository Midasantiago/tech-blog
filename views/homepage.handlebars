{{#each posts as |post| }}
<div class="flex mb-4 post">
    <div class="md:w-1/2">
        <h2 class="text-2xl">
            <a href="/post/{{post.id}}" class="text-blue-500 hover:underline">{{post.post_title}}</a>
        </h2>
        <p class="text-gray-600">Posted by: {{post.username}} on {{format_date post.date_created}}</p>
        <p class="mt-2">{{post.post_body}}</p>
    </div>
</div>
{{/each}}
